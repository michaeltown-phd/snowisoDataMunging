   title = {Impact of atmospheric circulation on temperature, clouds, and radiation at Summit Station, Greenland, with self-organizing maps},
   volume = {31},
   year = {2018},
}
@report{Jouzel1984,
   abstract = {The classical Rayleigh model assuming isotopic equilibrium fails to explain the deuterium and oxygen 18 contents of polar snow. This model leads to too high temperature-isotope gradients (both for 6D and 6•80), to too low gD-g•80 slopes, and consequently to an excessively large range of deuterium excess values (d = gD-8g•80). We present a new model that takes into account the existence of an isotopic kinetic effect at snow formation as a result of the fact that vapor deposition occurs in an environment supersaturated over ice. This kinetic effect is thoroughly discussed from a microphysical point of view and tested against experimental data and field observations. This new formulation reconciles predicted and observed values both for the temperature-isotope and 6D-gDX80 relationships for reasonable values of supersaturation over ice.},
