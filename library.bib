   journal = {Atmospheric Chemistry and Physics},
   month = {7},
   pages = {8521-8538},
   publisher = {Copernicus GmbH},
   title = {Continuous measurements of isotopic composition of water vapour on the East Antarctic Plateau},
   volume = {16},
